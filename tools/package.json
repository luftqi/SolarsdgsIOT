{
  "name": "solarsdgs-iot-simulator",
  "version": "1.0.0",
  "description": "IoT Device Simulator for SolarSDGs Project",
  "main": "iot-simulator.ts",
  "scripts": {
    "start": "ts-node iot-simulator.ts",
    "dev": "ts-node iot-simulator.ts --interval=5",
    "test": "ts-node iot-simulator.ts --interval=2 --batch=5",
    "device-6001": "ts-node iot-simulator.ts --device=6001",
    "device-6002": "ts-node iot-simulator.ts --device=6002",
    "multi-device": "concurrently \"npm run device-6001\" \"npm run device-6002\""
  },
  "keywords": [
    "iot",
    "mqtt",
    "simulator",
    "solar",
    "testing"
  ],
  "author": "SolarSDGs Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "dotenv": "^16.6.1",
    "form-data": "^4.0.4",
    "mqtt": "^5.14.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
